// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = "mysql://root:123456@mysqldb:3306/mapa-de-area"
}


model City {
  id Int @id @default(autoincrement())
  name String
  user_in_city User_in_city[]
  massive Massive[]
  client_massive Client_massive[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model User_in_work {
    id Int @id @default(autoincrement())
    user User  @relation(fields: [User_id], references: [id])
    User_id Int
    time Int
    month Int
    day Int
}


model User_in_city {
  id Int @id @default(autoincrement())
  User_id Int
  city_id Int
  user User  @relation(fields: [User_id], references: [id])
  city City  @relation(fields: [city_id], references: [id])
  periodo String
  type String
  date DateTime
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}



model User {
id      Int   @default(autoincrement()) @id
name    String
email   String @unique
password String
massiva Massive[]
department Departments @relation(fields: [department_id], references: [id])
department_id Int
user_in_city User_in_city[]
user_in_work User_in_work[]
historic_pausa Historic_pause[]
client_massive Client_massive[]
coffee Coffee[]
created_at DateTime @default(now())
updated_at DateTime @updatedAt
}


model Departments {
  id Int @default(autoincrement()) @id
  name String
  user User[]
}



model Massive {
id      Int   @default(autoincrement()) @id
description    String?
date    DateTime
returndate DateTime
status  String
type    String
user     User       @relation(fields: [user_id], references: [id])
user_id   Int
city     City       @relation(fields: [cidade_id], references: [id])
cidade_id   Int
created_at DateTime @default(now())
updated_at DateTime @updatedAt

massive_user Client_massive[]
}



model Coffee {
id      Int   @default(autoincrement()) @id
user     User       @relation(fields: [user_id], references: [id])
user_id   Int
created_at DateTime @default(now())
updated_at DateTime @updatedAt
}

model Historic_pause {
  id      Int   @default(autoincrement()) @id
  initial DateTime
  final DateTime
  user     User       @relation(fields: [user_id], references: [id])
  user_id   Int
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}


model Client_massive {
  id      Int   @default(autoincrement()) @id
  name    String
  massive Massive      @relation(fields: [massive_id], references: [id])
  massive_id   Int
  city    City      @relation(fields: [city_id], references: [id])
  city_id   Int
  user     User       @relation(fields: [user_id], references: [id])
  user_id   Int
  problem String
  status String
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}